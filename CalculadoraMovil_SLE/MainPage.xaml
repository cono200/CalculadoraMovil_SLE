            <Button Text="flecha"  Grid.Column="1" Grid.Row="7"  StyleClass="Botones"></Button>
            <Button Text="%" Grid.Column="2" Grid.Row="7"  StyleClass="Botones"></Button>
            <Button Text="/"   Grid.Column="3" Grid.Row="7"  StyleClass="Botones"></Button>
            <Button Text="7" Grid.Column="0" Grid.Row="8"  StyleClass="Botones"></Button>
            <Button Text="8" Grid.Column="1" Grid.Row="8" StyleClass="Botones"></Button>
            <Button Text="9" Grid.Column="2" Grid.Row="8"  StyleClass="Botones"></Button>
