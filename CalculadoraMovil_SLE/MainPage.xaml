            <Button Text="2" Grid.Column="1" Grid.Row="10"  StyleClass="Botones"></Button>
            <Button Text="3" Grid.Column="2" Grid.Row="10"  StyleClass="Botones"></Button>
            <Button Text="+" Grid.Column="3" Grid.Row="10"  StyleClass="Botones"></Button>
            <Button Text="a" Grid.Column="0" Grid.Row="11"  StyleClass="Botones"></Button>
            <Button Text="0" Grid.Column="1" Grid.Row="11"  StyleClass="Botones"></Button>
            <Button Text="." Grid.Column="2" Grid.Row="11"  StyleClass="Botones"></Button>
            <Button Text="=" Grid.Column="3" Grid.Row="11"  StyleClass="Botones"></Button>

        </Grid>
    </StackLayout>

</ContentPage>
